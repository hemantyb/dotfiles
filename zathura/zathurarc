set completion-group-bg         "#1f2335"  # Status Bar Background
set completion-group-fg         "#c0caf5"  # Foreground
set completion-bg               "#1f2335"  # Status Bar Background
set completion-fg               "#c0caf5"  # Foreground
set completion-highlight-bg     "#7aa2f7"  # Blue Accent
set completion-highlight-fg     "#1a1b26"  # Background (for contrast on blue)

set notification-error-bg       "#1a1b26"  # Background
set notification-error-fg       "#f7768e"  # Red (Error)
set notification-warning-bg     "#1a1b26"  # Background
set notification-warning-fg     "#e0af68"  # Orange (Warning)
set notification-bg             "#1a1b26"  # Background
set notification-fg             "#c0caf5"  # Foreground

set index-bg                    "#1a1b26"  # Background
set index-fg                    "#c0caf5"  # Foreground
set index-active-bg             "#292e42"  # Selection Background
set index-active-fg             "#c0caf5"  # Foreground

set inputbar-bg                 "#24283b"  # Input/Prompt Background
set inputbar-fg                 "#c0caf5"  # Foreground

set statusbar-bg                "#1f2335"  # Status Bar Background
set statusbar-fg                "#c0caf5"  # Foreground

set highlight-color             "#7aa2f7"  # Blue Accent
set highlight-active-color      "#7dcfff"  # Cyan Accent (for current search result)

set default-bg                  "#1a1b26"  # Background (Document canvas)
# set default-fg                  "#c0caf5"  # Foreground (Set just in case)

set recolor-lightcolor          "#1a1b26"  # Background (Sets page background)
set recolor-darkcolor           "#c0caf5"  # Foreground (Sets page text color)

set recolor false
map <C-i> toggle recolor

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
set guioptions none
